# overwritten.
[Unit]
Description=alertmanager
After=docker.service

[Service]
EnvironmentFile=-/etc/environment
ExecStart=/usr/bin/docker start --attach alertmanager
ExecStop=/usr/bin/docker stop alertmanager
Restart=always
RestartSec=10s
TimeoutStartSec=120
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
