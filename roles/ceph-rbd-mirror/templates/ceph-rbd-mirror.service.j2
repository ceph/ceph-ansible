[Unit]
Description=Ceph RBD mirror
{% if container_binary == 'docker' %}
After=docker.service
{% else %}
After=network.target
{% endif %}

[Service]
EnvironmentFile=-/etc/environment
ExecStartPre=-/usr/bin/{{ container_binary }} stop ceph-rbd-mirror-{{ ansible_hostname }}
ExecStartPre=-/usr/bin/{{ container_binary }} rm ceph-rbd-mirror-{{ ansible_hostname }}
ExecStart=/usr/bin/{{ container_binary }} run --rm --net=host \
  --memory={{ ceph_rbd_mirror_container_memory_limit }} \
  --cpus={{ ceph_rbd_mirror_container_cpu_limit }} \
  -v /var/lib/ceph:/var/lib/ceph:z \
  -v /etc/ceph:/etc/ceph:z \
  -v /var/run/ceph:/var/run/ceph:z \
  -v /etc/localtime:/etc/localtime:ro \
  -v /var/log/ceph:/var/log/ceph:z \
  -e CLUSTER={{ cluster }} \
  -e CEPH_DAEMON=RBD_MIRROR \
  -e CONTAINER_IMAGE={{ ceph_container_registry }}/{{ ceph_container_image }}:{{ ceph_container_image_tag }} \
  --name=ceph-rbd-mirror-{{ ansible_hostname }} \
  {{ ceph_rbd_mirror_container_extra_env }} \
  {{ ceph_container_registry }}/{{ ceph_container_image }}:{{ ceph_container_image_tag }}
ExecStopPost=-/usr/bin/{{ container_binary }} stop ceph-rbd-mirror-{{ ansible_hostname }}
KillMode=none
Restart=always
RestartSec=10s
TimeoutStartSec=120
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
