---
# Defines deployment design and assigns role to server groups

- hosts: mons
  sudo: True
  roles:
  - ceph-mon
  serial: 1 # NEED THIS WHEN DEPLOYING MONITORS ON DOCKER CONTAINERS

- hosts: osds
  sudo: True
  roles:
  - ceph-osd

- hosts: mdss
  sudo: True
  roles:
  - ceph-mds

- hosts: rgws
  sudo: True
  roles:
  - ceph-rgw

- hosts: restapis
  sudo: True
  roles:
  - ceph-restapi
